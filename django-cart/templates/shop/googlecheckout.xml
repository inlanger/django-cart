<?xml version="1.0" encoding="UTF-8"?>
<checkout-shopping-cart xmlns="http://checkout.google.com/schema/2">
    <shopping-cart>
        <items>

            {% for item in cart.items %}<item>
                <item-name>{{ item.sku }}</item-name>
                <item-description>{{ item.summary_description }}</item-description>
                <unit-price currency="USD">{{ item.unitprice }}</unit-price>
                <quantity>{{ item.count }}</quantity>
            </item>{% endfor %}

        </items>
    </shopping-cart>
    <checkout-flow-support>
        <merchant-checkout-flow-support>
            <edit-cart-url>{{ edit_url }}</edit-cart-url>
            <continue-shopping-url>{{ continue_url }}</continue-shopping-url>
        </merchant-checkout-flow-support>
    </checkout-flow-support>
</checkout-shopping-cart>
